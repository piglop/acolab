= bootstrap_form_for @workshop, :html => { :class => 'form-horizontal' } do |f|
  = f.text_field :name
  = f.text_area :description, :rows => 5
  = f.select :state, Workshop::STATES.map { |state| [t(state, scope: "workshop_state"), state] }
  = render "shared/markdown_content_form", f: f
  
  .form-actions
    = f.submit t('.submit'), :class => 'btn btn-primary'
    = link_to t('.cancel'), workshops_path, :class => 'btn'
