- links = []
- links << link_to(t(".sign_in"), new_session_path(resource_name)) if controller_name != 'sessions'
- links << link_to(t(".sign_up"), new_registration_path(resource_name)) if devise_mapping.registerable? && controller_name != 'registrations'
- links << link_to(t(".new_password"), new_password_path(resource_name)) if devise_mapping.recoverable? && controller_name != 'passwords'
- links << link_to(t(".new_confirmation"), new_confirmation_path(resource_name)) if devise_mapping.confirmable? && controller_name != 'confirmations'
- links << link_to(t(".new_unlock"), new_unlock_path(resource_name)) if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    - links << link_to(t(".sign_in_with", :provider => provider.to_s.titleize), omniauth_authorize_path(resource_name, provider))

- unless links.empty?
  .well
    %ul.nav.nav-list
      - links.each do |link|
        %li= link
