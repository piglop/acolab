= bootstrap_form_for @project, :html => { :class => 'form-horizontal' } do |f|
  = f.text_field :name
  = f.text_area :description, :rows => 5
  .control-group
    .control-label
      %label{for: "project_content"}= Project.human_attribute_name(:content)
      %span.help-block au format Markdown
    .controls
      %textarea.markdown-toolbar{name: "project[content]", rows: 20}= @project.content
  
  .form-actions
    = f.submit t('.submit'), :class => 'btn btn-primary'
    = link_to t('.cancel'), projects_path, :class => 'btn'
