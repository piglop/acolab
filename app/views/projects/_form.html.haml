= bootstrap_form_for @project, :html => { :class => 'form-horizontal' } do |f|
  = f.text_field :name
  = f.text_area :description, :rows => 5
  .row-fluid
    .span8
      .control-group
        %label.control-label{for: "project_content"}= Project.human_attribute_name(:content)
        .controls
          #wmd-button-bar
          %textarea.wmd-input{name: "project[content]", rows: 20}= @project.content
    .span4
      %p= t(".preview")
      #wmd-preview
  
  .form-actions
    = f.submit t('.submit'), :class => 'btn btn-primary'
    = link_to t('.cancel'), projects_path, :class => 'btn'
