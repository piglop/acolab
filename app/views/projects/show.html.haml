- model_class = @project.class
- add_crumb t(".title", name: @project.id)
- content_for(:title, t(".title", name: @project.id))

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name)
  %dd= @project.name
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:description)
  %dd= @project.description

.form-actions
  = link_to t('.back'), projects_path, :class => 'btn'
  = link_to t('.edit'), edit_project_path(@project), :class => 'btn' if can? :update, @project
  = link_to t('.destroy'), project_path(@project), :method => "delete", :confirm => t('.confirm'), :class => 'btn btn-danger' if can? :destroy, @project
