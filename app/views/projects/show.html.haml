- content_for(:title, @project.name)
- add_crumb content_for(:title)

.row-fluid
  .span12
    .hero-unit
      %h1= @project.name
      %p= @project.description
.row-fluid
  .span3.bs-docs-sidebar
    != Redcarpet::Markdown.new(TocRenderer).render(@project.content)
  .span9
    != Redcarpet::Markdown.new(ProjectRenderer.new).render(@project.content)

.row-fluid
  .form-actions
    = link_to t('.back'), projects_path, :class => 'btn'
    = link_to t('.edit'), edit_project_path(@project), :class => 'btn' if can? :update, @project
    = link_to t('.destroy'), project_path(@project), :method => "delete", :confirm => t('.confirm'), :class => 'btn btn-danger' if can? :destroy, @project
